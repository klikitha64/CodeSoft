    private void fgTFActionPerformed(java.awt.event.ActionEvent evt) {                                     
      
    }                                    

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      //executes our average for the grades
      double grades,chemistry,maths,physics,biology,total;
      biology=Double.parseDouble(gTF.getText());
      physics=Double.parseDouble(gTF1.getText());
      chemistry=Double.parseDouble(gTF3.getText());
      maths=Double.parseDouble(gTF3.getText());
      grades=(biology+physics+chemistry+maths)/4;
      total=biology+physics+chemistry+maths;
      
      if(grades>=85){
          fgTF.setText("A");
          averageTF.setText(Double.toString(grades));
          totalTF.setText(Double.toString(total));
      }
      else if(grades>=75 && grades <=84){
          fgTF.setText("B");
          averageTF.setText(Double.toString(grades));
          totalTF.setText(Double.toString(total));
      }
      else if(grades>=65 && grades <=74){
          fgTF.setText("C");
          averageTF.setText(Double.toString(grades));
          totalTF.setText(Double.toString(total));
      }
      else if(grades>=45 && grades <=64){
          fgTF.setText("D");
          averageTF.setText(Double.toString(grades));
          totalTF.setText(Double.toString(total));
      }
      else if(grades<45){
          fgTF.setText("F");
          averageTF.setText(Double.toString(grades));
          totalTF.setText(Double.toString(total));
      }
      
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
      //clears our textfeilds
